    <script>
        // Birthday Configuration
        const birthdayName = "Smilee";
        const birthdayDate = "January 21";
        
        // Music Playlist
        const playlist = [
            {
                title: "Happy Birthday",
                src: "01-Monk-Turner-Fascinoma-Its-Your-Birthday(chosic.com).mp3"
            },
            {
                title: "Mark Humble - Happy Birthday",
                src: "124-Mark-Humble-Free-Happy-Birthday(chosic.com).mp3"
            },
            {
                title: "Happy Birthday (Mixkit)",
                src: "https://assets.mixkit.co/music/preview/mixkit-happy-birthday-to-you-443.mp3"
            }
        ];
        
        // Music System
        let audio = null;
        let isPlaying = false;
        let currentVolume = 0.5;
        let currentSongIndex = 0;
        
        // Initialize everything
        document.addEventListener('DOMContentLoaded', () => {
            initializePage();
            initializeMusic();
            createFloatingHearts();
            startConfetti();
            
            // Show welcome message
            setTimeout(() => {
                showSpecialNotification(`üéÇ Happy Birthday ${birthdayName}! üéâ`, 4000);
            }, 1500);
        });
        
        // Initialize Page
        function initializePage() {
            // Set page title
            document.title = `Happy Birthday ${birthdayName}! üéÇ | ${birthdayDate}`;
            
            // Load saved heart count
            const savedHearts = localStorage.getItem('smileeHearts') || 0;
            document.getElementById('heartCount').textContent = savedHearts;
            
            // Setup event listeners
            setupEventListeners();
            
            // Create floating elements
            setInterval(createFloatingElement, 3000);
        }
        
        // Initialize Music System
        function initializeMusic() {
            // Get audio element
            audio = document.getElementById('birthdayAudio');
            audio.volume = currentVolume;
            
            // Load first song
            loadSong(currentSongIndex);
            
            // Music controls
            const playBtn = document.getElementById('playBtn');
            const nextBtn = document.getElementById('nextBtn');
            const muteBtn = document.getElementById('muteBtn');
            const volumeSlider = document.getElementById('volumeSlider');
            
            playBtn.addEventListener('click', togglePlay);
            nextBtn.addEventListener('click', nextSong);
            muteBtn.addEventListener('click', toggleMute);
            volumeSlider.addEventListener('input', updateVolume);
            
            // Handle song end - play next song
            audio.addEventListener('ended', () => {
                nextSong();
            });
            
            // Add click anywhere to enable autoplay
            document.addEventListener('click', () => {
                if (!isPlaying && audio.paused) {
                    audio.play().then(() => {
                        isPlaying = true;
                        playBtn.innerHTML = '<i class="fas fa-pause"></i>';
                        playBtn.classList.add('play');
                    }).catch(e => console.log("Play failed:", e));
                }
            }, { once: true });
        }
        
        // Load song from playlist
        function loadSong(index) {
            const song = playlist[index];
            audio.src = song.src;
            const songInfo = document.getElementById('songInfo');
            songInfo.textContent = song.title + ' - ' + (index + 1) + '/' + playlist.length;
        }
        
        // Music Control Functions
        function togglePlay() {
            const playBtn = document.getElementById('playBtn');
            if (isPlaying) {
                audio.pause();
                playBtn.innerHTML = '<i class="fas fa-play"></i>';
                playBtn.classList.remove('play');
            } else {
                audio.play();
                playBtn.innerHTML = '<i class="fas fa-pause"></i>';
                playBtn.classList.add('play');
            }
            isPlaying = !isPlaying;
        }
        
        function nextSong() {
            // Move to next song in playlist
            currentSongIndex = (currentSongIndex + 1) % playlist.length;
            loadSong(currentSongIndex);
            
            // Auto-play next song
            if (isPlaying) {
                audio.play().catch(e => console.log("Play failed:", e));
            }
        }
        
        function toggleMute() {
            const muteBtn = document.getElementById('muteBtn');
            audio.muted = !audio.muted;
            muteBtn.innerHTML = audio.muted ? 
                '<i class="fas fa-volume-mute"></i>' : 
                '<i class="fas fa-volume-up"></i>';
        }
        
        function updateVolume(e) {
            currentVolume = e.target.value / 100;
            audio.volume = currentVolume;
        }
        
        // Setup Event Listeners
        function setupEventListeners() {
            // Heart button
            const heartBtn = document.getElementById('heartButton');
            heartBtn.addEventListener('click', () => {
                // Increment count
                let count = parseInt(localStorage.getItem('smileeHearts') || 0);
                count++;
                localStorage.setItem('smileeHearts', count);
                
                // Update display
                updateHeartCount(count);
                
                // Create floating heart
                createFloatingHeart();
                
                // Play heart sound
                playSound('heart');
                
                // Special messages at certain counts
                if (count === 10) {
                    showSpecialNotification('10 hearts! Smilee, you are loved! üíñ', 3000);
                    createHeartExplosion();
                }
                if (count === 21) {
                    showSpecialNotification('21 hearts for January 21! üéä', 3000);
                    createFireworks();
                }
                if (count === 50) {
                    showSpecialNotification('50 hearts! You\'re incredible! üåü', 4000);
                    createGoldenConfetti();
                }
            });
            
            // Reveal secret message
            const revealBtn = document.getElementById('revealBtn');
            revealBtn.addEventListener('click', () => {
                const messageDiv = document.getElementById('hiddenMessage');
                const isHidden = messageDiv.style.maxHeight === '0px' || messageDiv.style.maxHeight === '';
                
                if (isHidden) {
                    messageDiv.style.maxHeight = '300px';
                    revealBtn.innerHTML = '<i class="fas fa-lock-open"></i> Hide Message';
                    revealBtn.style.background = 'var(--purple)';
                    revealBtn.style.color = 'white';
                    
                    // Play magic sound
                    playSound('magic');
                    
                    // Create sparkles
                    createSparkleEffect();
                    
                    // Show special message
                    setTimeout(() => {
                        showSpecialNotification('üíå A special message just for you, Smilee!', 3000);
                    }, 500);
                } else {
                    messageDiv.style.maxHeight = '0';
                    revealBtn.innerHTML = '<i class="fas fa-key"></i> Reveal Secret Message';
                    revealBtn.style.background = 'transparent';
                    revealBtn.style.color = 'var(--purple)';
                }
            });
            
            // Cake click (blow candle)
            const cake = document.querySelector('.cake');
            cake.addEventListener('click', () => {
                const flame = document.querySelector('.flame');
                flame.style.animation = 'none';
                flame.style.opacity = '0';
                flame.style.transform = 'translateX(-50%) scale(0)';
                
                // Play blow sound
                playSound('blow');
                
                // Show wish message
                setTimeout(() => {
                    showSpecialNotification('‚ú® Your wish has been sent to the stars, Smilee! ‚ú®', 4000);
                }, 800);
                
                // Reset flame after 7 seconds
                setTimeout(() => {
                    flame.style.animation = 'flicker 0.8s infinite alternate';
                    flame.style.opacity = '1';
                    flame.style.transform = 'translateX(-50%) scale(1)';
                }, 7000);
            });
            
            // Keyboard shortcuts
            document.addEventListener('keydown', (e) => {
                // 'S' for Smilee special effects
                if (e.key === 's' || e.key === 'S') {
                    createNameSparkles();
                    showSpecialNotification('‚ú® Special effects for Smilee! ‚ú®', 2000);
                }
                // 'H' for hearts
                if (e.key === 'h' || e.key === 'H') {
                    for (let i = 0; i < 5; i++) {
                        setTimeout(() => {
                            createFloatingHeart();
                        }, i * 200);
                    }
                }
                // Space to toggle music
                if (e.key === ' ') {
                    togglePlay();
                }
            });
        }
        
        // Update Heart Count with Animation
        function updateHeartCount(count) {
            const countElement = document.getElementById('heartCount');
            countElement.textContent = count;
            
            // Add animation
            countElement.style.transform = 'scale(1.5)';
            countElement.style.color = '#ff6b6b';
            
            setTimeout(() => {
                countElement.style.transform = 'scale(1)';
                countElement.style.color = 'var(--accent)';
            }, 300);
        }
        
        // Create Floating Hearts Background
        function createFloatingHearts() {
            const container = document.getElementById('floatingHearts');
            const hearts = ['‚ù§Ô∏è', 'üíñ', 'üíï', 'üíó', 'üíì', 'üíû'];
            
            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.innerHTML = hearts[Math.floor(Math.random() * hearts.length)];
                heart.style.cssText = `
                    position: absolute;
                    font-size: ${Math.random() * 30 + 20}px;
                    left: ${Math.random() * 100}%;
                    top: ${Math.random() * 100}%;
                    opacity: ${Math.random() * 0.3 + 0.1};
                    z-index: 1;
                    pointer-events: none;
                    animation: float ${Math.random() * 20 + 10}s infinite linear;
                `;
                
                container.appendChild(heart);
            }
            
            // Add floating animation
            const style = document.createElement('style');
            style.textContent = `
                @keyframes float {
                    0% {
                        transform: translateY(0) rotate(0deg);
                    }
                    33% {
                        transform: translateY(-100px) rotate(120deg);
                    }
                    66% {
                        transform: translateY(-200px) rotate(240deg);
                    }
                    100% {
                        transform: translateY(-300px) rotate(360deg);
                    }
                }
            `;
            document.head.appendChild(style);
        }
        
        // Create Floating Heart Effect
        function createFloatingHeart() {
            const heart = document.createElement('div');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.cssText = `
                position: fixed;
                font-size: 2.5rem;
                z-index: 9999;
                pointer-events: none;
                animation: floatUp 2s ease-out forwards;
                bottom: 100px;
                left: ${Math.random() * 70 + 15}%;
                filter: drop-shadow(0 0 10px #ff6b6b);
            `;
            
            document.body.appendChild(heart);
            
            setTimeout(() => heart.remove(), 2000);
        }
        
        // Create Name Sparkles Effect
        function createNameSparkles() {
            const nameElement = document.querySelector('.birthday-person');
            const rect = nameElement.getBoundingClientRect();
            
            for (let i = 0; i < 15; i++) {
                setTimeout(() => {
                    const sparkle = document.createElement('div');
                    sparkle.innerHTML = '‚ú®';
                    sparkle.style.cssText = `
                        position: fixed;
                        font-size: 1.5rem;
                        left: ${rect.left + Math.random() * rect.width}px;
                        top: ${rect.top + Math.random() * rect.height}px;
                        z-index: 9999;
                        pointer-events: none;
                        animation: sparklePop 1s ease-out forwards;
                    `;
                    
                    document.body.appendChild(sparkle);
                    setTimeout(() => sparkle.remove(), 1000);
                }, i * 100);
            }
            
            // Add animation
            const style = document.createElement('style');
            style.textContent = `
                @keyframes sparklePop {
                    0% {
                        transform: scale(0) rotate(0deg);
                        opacity: 1;
                    }
                    100% {
                        transform: scale(2) rotate(360deg);
                        opacity: 0;
                    }
                }
                @keyframes floatUp {
                    0% {
                        transform: translateY(0) scale(1);
                        opacity: 1;
                    }
                    100% {
                        transform: translateY(-100vh) scale(0);
                        opacity: 0;
                    }
                }
            `;
            document.head.appendChild(style);
        }
        
        // Create Sparkle Effect
        function createSparkleEffect() {
            const container = document.querySelector('.secret-message-container');
            const rect = container.getBoundingClientRect();
            
            for (let i = 0; i < 30; i++) {
                setTimeout(() => {
                    const sparkle = document.createElement('div');
                    sparkle.innerHTML = '‚ú®';
                    sparkle.style.cssText = `
                        position: fixed;
                        font-size: 1.2rem;
                        left: ${rect.left + Math.random() * rect.width}px;
                        top: ${rect.top + Math.random() * rect.height}px;
                        z-index: 9999;
                        pointer-events: none;
                        animation: sparkleBurst 0.8s ease-out forwards;
                    `;
                    
                    document.body.appendChild(sparkle);
                    setTimeout(() => sparkle.remove(), 800);
                }, i * 50);
            }
        }
        
        // Create Heart Explosion
        function createHeartExplosion() {
            for (let i = 0; i < 30; i++) {
                setTimeout(() => {
                    createFloatingHeart();
                }, i * 50);
            }
        }
        
        // Create Fireworks
        function createFireworks() {
            for (let i = 0; i < 5; i++) {
                setTimeout(() => {
                    createFirework();
                }, i * 300);
            }
        }
        
        function createFirework() {
            const colors = ['#ff6b6b', '#4d96ff', '#6bcf7f', '#ffd93d', '#9d65ff'];
            const centerX = Math.random() * 80 + 10;
            const centerY = Math.random() * 80 + 10;
            
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.style.cssText = `
                    position: fixed;
                    width: 8px;
                    height: 8px;
                    background: ${colors[Math.floor(Math.random() * colors.length)]};
                    border-radius: 50%;
                    left: ${centerX}%;
                    top: ${centerY}%;
                    z-index: 9999;
                    pointer-events: none;
                    animation: firework 1s ease-out forwards;
                    box-shadow: 0 0 10px ${colors[Math.floor(Math.random() * colors.length)]};
                `;
                
                document.body.appendChild(particle);
                setTimeout(() => particle.remove(), 1000);
            }
            
            // Add firework animation
            const style = document.createElement('style');
            style.textContent = `
                @keyframes firework {
                    0% {
                        transform: translate(0, 0) scale(1);
                        opacity: 1;
                    }
                    100% {
                        transform: translate(${Math.random() * 200 - 100}px, ${Math.random() * 200 - 100}px) scale(0);
                        opacity: 0;
                    }
                }
            `;
            document.head.appendChild(style);
        }
        
        // Create Golden Confetti
        function createGoldenConfetti() {
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.innerHTML = ['üéâ', '‚ú®', 'üåü', 'üí´', 'ü•≥'][Math.floor(Math.random() * 5)];
                    confetti.style.cssText = `
                        position: fixed;
                        font-size: 2rem;
                        left: ${Math.random() * 100}%;
                        top: -50px;
                        z-index: 9999;
                        pointer-events: none;
                        animation: goldFall ${Math.random() * 2 + 1}s ease-in forwards;
                    `;
                    
                    document.body.appendChild(confetti);
                    setTimeout(() => confetti.remove(), 3000);
                }, i * 50);
            }
        }
        
        // Start Confetti
        function startConfetti() {
            setInterval(() => {
                if (Math.random() > 0.7) {
                    createConfettiPiece();
                }
            }, 500);
        }
        
        function createConfettiPiece() {
            const confetti = document.createElement('div');
            const colors = ['#ff6b6b', '#4d96ff', '#6bcf7f', '#ffd93d', '#9d65ff'];
            const shapes = ['circle', 'square', 'triangle'];
            const shape = shapes[Math.floor(Math.random() * shapes.length)];
            
            confetti.style.cssText = `
                position: fixed;
                width: 10px;
                height: 10px;
                background: ${colors[Math.floor(Math.random() * colors.length)]};
                border-radius: ${shape === 'circle' ? '50%' : shape === 'triangle' ? '0' : '2px'};
                left: ${Math.random() * 100}%;
                top: -20px;
                z-index: 1;
                pointer-events: none;
                animation: confettiFall ${Math.random() * 3 + 2}s linear forwards;
            `;
            
            document.body.appendChild(confetti);
            setTimeout(() => confetti.remove(), 5000);
        }
        
        // Create Floating Element
        function createFloatingElement() {
            const elements = ['‚ú®', 'üåü', 'üíñ', 'üéÇ', 'üéÅ', 'üéà'];
            const element = document.createElement('div');
            element.innerHTML = elements[Math.floor(Math.random() * elements.length)];
            element.style.cssText = `
                position: fixed;
                font-size: ${Math.random() * 30 + 20}px;
                left: ${Math.random() * 100}%;
                top: 100%;
                opacity: ${Math.random() * 0.4 + 0.2};
                z-index: 1;
                pointer-events: none;
                animation: elementFloat ${Math.random() * 10 + 5}s linear forwards;
            `;
            
            document.body.appendChild(element);
            setTimeout(() => element.remove(), 15000);
        }
        
        // Play Sound Effects
        function playSound(type) {
            try {
                let soundUrl;
                switch(type) {
                    case 'heart':
                        soundUrl = 'https://assets.mixkit.co/sfx/preview/mixkit-heartbeat-1184.mp3';
                        break;
                    case 'magic':
                        soundUrl = 'https://assets.mixkit.co/sfx/preview/mixkit-magic-sparkles-300.mp3';
                        break;
                    case 'blow':
                        soundUrl = 'https://assets.mixkit.co/sfx/preview/mixkit-wind-whistling-1496.mp3';
                        break;
                    default:
                        return;
                }
                
                const sound = new Audio(soundUrl);
                sound.volume = 0.3;
                sound.play().catch(e => console.log("Sound play failed:", e));
            } catch (error) {
                console.log("Sound error:", error);
            }
        }
        
        // Show Notification
        function showNotification(message, duration = 3000) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 80px;
                right: 20px;
                background: rgba(0, 0, 0, 0.85);
                color: white;
                padding: 15px 25px;
                border-radius: 15px;
                z-index: 10000;
                animation: slideIn 0.3s ease, fadeOut 0.3s ease ${duration - 300}ms forwards;
                border-left: 5px solid var(--primary);
                backdrop-filter: blur(10px);
                border: 1px solid rgba(255, 255, 255, 0.1);
                box-shadow: 0 10px 30px rgba(0,0,0,0.3);
                max-width: 300px;
            `;
            
            notification.innerHTML = `<i class="fas fa-gift" style="color: var(--accent); margin-right: 10px;"></i> ${message}`;
            
            document.body.appendChild(notification);
            
            setTimeout(() => notification.remove(), duration);
        }
        
        // Show Special Notification
        function showSpecialNotification(message, duration = 3000) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: linear-gradient(135deg, rgba(255, 107, 139, 0.9), rgba(255, 217, 61, 0.9));
                color: #1a1a2e;
                padding: 25px 40px;
                border-radius: 20px;
                z-index: 10000;
                animation: popIn 0.4s ease, popOut 0.4s ease ${duration - 400}ms forwards;
                font-weight: 700;
                font-size: 1.3rem;
                text-align: center;
                box-shadow: 0 20px 50px rgba(0,0,0,0.4);
                border: 3px solid white;
            `;
            
            notification.innerHTML = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => notification.remove(), duration);
        }
        
        // Add animations to head
        const animations = `
            @keyframes slideIn {
                from {
                    transform: translateX(100%);
                    opacity: 0;
                }
                to {
                    transform: translateX(0);
                    opacity: 1;
                }
            }
            @keyframes fadeOut {
                from { opacity: 1; }
                to { opacity: 0; }
            }
            @keyframes popIn {
                from {
                    transform: translate(-50%, -50%) scale(0);
                    opacity: 0;
                }
                to {
                    transform: translate(-50%, -50%) scale(1);
                    opacity: 1;
                }
            }
            @keyframes popOut {
                from {
                    transform: translate(-50%, -50%) scale(1);
                    opacity: 1;
                }
                to {
                    transform: translate(-50%, -50%) scale(0);
                    opacity: 0;
                }
            }
            @keyframes confettiFall {
                0% {
                    transform: translateY(0) rotate(0deg);
                    opacity: 1;
                }
                100% {
                    transform: translateY(100vh) rotate(360deg);
                    opacity: 0;
                }
            }
            @keyframes elementFloat {
                0% {
                    transform: translateY(0) rotate(0deg);
                    opacity: 0.6;
                }
                100% {
                    transform: translateY(-100vh) rotate(360deg);
                    opacity: 0;
                }
            }
        `;
        
        const styleSheet = document.createElement('style');
        styleSheet.textContent = animations;
        document.head.appendChild(styleSheet);
        
        // Auto birthday messages
        setInterval(() => {
            const messages = [
                "üéÇ Happy Birthday Smilee!",
                "‚ú® You shine brighter than stars!",
                "üíñ Sending you infinite love!",
                "ü•≥ Party time for Smilee!",
                "üåü Make a wish, it's magical!",
                "üéâ Celebrate your amazing self!",
                "üí´ You're a blessing to this world!"
            ];
            const randomMsg = messages[Math.floor(Math.random() * messages.length)];
            showNotification(randomMsg, 2500);
        }, 30000);
    </script>
